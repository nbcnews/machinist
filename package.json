{
  "name": "machinist",
  "version": "0.1.0",
  "description": "A boilerplate for a Metalsmith static site.",
  "main": "index.js",
  "pre-commit": "lint-staged",
  "scripts": {
    "secure-check": "node bin/secureCheck",
    "setup": "node bin/machinist",
    "presetup": "npm install",
    "git-init": "rm -rf .git && git init",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "doc-ingest": "node ./lib/googledocjson.js && node ./lib/dropboxpaperjson.js",
    "debug": "BUILD_DEBUG=true BUILD=development npm start",
    "dev": "BUILD=development npm start",
    "build": "gulp rewriteAssetPath && gulp md5Assets && BUILD=production npm start && gulp copyAssets && gulp combineJson && npm run secure-check",
    "stage": "BUILD=stage npm start",
    "format": "eslint \"src/scripts/**\" \"lib/**\" --fix && stylelint \"src/styles/**/*.scss\" --fix",
    "s3": "gulp publish-story",
    "cdn": "gulp publish-assets",
    "publish": "npm run build && npm run s3",
    "script-lint": "eslint \"src/scripts/**\" \"lib/**\"",
    "style-lint": "stylelint \"**/*.scss\"",
    "lint": "npm run script-lint && npm run style-lint && htmlhint **/*.{hbs,html} --config .htmlhintrc --ignore **/www/**",
    "lint-staged": "lint-staged"
  },
  "bin": {
    "machinist": "bin/machinist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nbcnews/machinist.git"
  },
  "keywords": [
    "metalsmith",
    "boilerplate",
    "static",
    "site"
  ],
  "author": "Ian Rose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nbcnews/machinist/issues"
  },
  "homepage": "https://github.com/nbcnews/machinist#readme",
  "lint-staged": {
    "*.scss": "style-lint",
    "*.js": "script-lint"
  },
  "dependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "commander": "2.10.0",
    "googledoc-to-json": "^0.3.0",
    "gulp-jsoncombine": "^1.0.3",
    "gulp-md5-plus": "^1.0.3",
    "gulp-rewrite-image-path": "0.0.4",
    "handlebars": "^4.0.5",
    "handlebars-helpers": "^0.7.5",
    "js-yaml": "^3.10.0",
    "metalsmith": "^2.2.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-collections": "petasittek/metalsmith-collections",
    "metalsmith-default-values": "^2.0.0",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-filedata": "^0.1.0",
    "metalsmith-fingerprint-ignore": "^1.1.2",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-mapsite": "^1.0.4",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metadata": "0.0.4",
    "metalsmith-models": "git+https://github.com/ianrose/metalsmith-models.git#handles-no-models",
    "metalsmith-paths": "^3.0.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-postcss": "^4.0.0",
    "metalsmith-raw": "^0.2.0",
    "metalsmith-register-helpers": "^0.2.0",
    "metalsmith-sass": "^1.4.0",
    "metalsmith-webpack2": "git+https://github.com/ianrose/metalsmith-webpack2.git",
    "metalsmith-with-postcss": "^1.0.0",
    "metalsmith-writemetadata": "^0.4.5",
    "moment": "^2.18.1",
    "paper2json": "^0.2.2",
    "typesettings": "^4.0.0",
    "typogr": "^0.6.6"
  },
  "devDependencies": {
    "coffee-loader": "^0.7.3",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "git-assert-clean": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-awspublish": "^3.3.0",
    "gulp-filter": "^5.0.1",
    "gulp-prompt": "^0.2.0",
    "gulp-rename": "^1.2.2",
    "htmlhint": "^0.9.13",
    "lint-staged": "^3.2.1",
    "log-utils": "^0.2.1",
    "metalsmith-browser-sync": "^1.1.1",
    "metalsmith-debug": "^1.1.0",
    "pre-commit": "^1.1.3",
    "standard": "^10.0.2",
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0"
  }
}
